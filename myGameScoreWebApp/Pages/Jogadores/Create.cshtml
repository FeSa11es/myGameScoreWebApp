@page
@model myGameScoreWebApp.Pages.Jogadores.CreateModel
@{
}

<br>

<h2> Novo Jogador</h2>

@if (Model.errorMsg.Length>0)
{
   <div class='alert alert-warning alert-dismissible fade show' role='alert'>
       <strong>@Model.errorMsg</strong>
       <button type='button' class='btn-close' data-bs-dismiss='alert' aria-lavel='Close'></button>
   </div> 
}

<form method= "POST">
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Nome do Jogador</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="nome_user" value="@Model.jogadorinfo.nome_user" />
        </div>
    </div>

    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Email do Jogador</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="email_user" value="@Model.jogadorinfo.email_user" />
        </div>
    </div>

    @if (Model.successMsg.Length>0)
{
   <div class='alert alert-warning alert-dismissible fade show' role='alert'>
       <strong>@Model.successMsg</strong>
       <button type='button' class='btn-close' data-bs-dismiss='alert' aria-lavel='Close'></button>
   </div> 
}


    <div class="row md-3">
        <div class="offset-sm-3 col-sm-3 d-grid">
            <button type="submit" class="btn-primary">Salvar</button>
        </div>
        <div class="offset-sm-3 col-sm-3 d-grid">
            <a class="btn-outline-primary" href="/" role="button">Cancelar</a>
        </div>
    </div>

</form>